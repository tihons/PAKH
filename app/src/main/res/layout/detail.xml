<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vn.com.vhc.pakh.Detail"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="#fff">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:text="Chi tiết"
        android:textColor="#000000"
        android:textSize="24sp"
        android:gravity="center"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.025"
        android:background="#f4f1f1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.1"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:weightSum="1"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="5dp"
                android:gravity="bottom"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:text="Tiêu đề"
                android:textSize="17sp"
                android:textColor="#497adc"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:weightSum="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/reqTitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:gravity="bottom"
                android:padding="10dp"
                android:text="Test"
                android:textColor="@android:color/black" />
            <TextView

                android:gravity="bottom"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"/>

        </LinearLayout>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.025"
        android:background="#f4f1f1"/>



    <TextView
        android:layout_marginLeft="5dp"
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:text="Nội dung yêu cầu"
        android:textSize="17sp"
        android:textColor="#497adc"/>

    <TextView
        android:id="@+id/reqContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:gravity="bottom"
        android:padding="10dp"
        android:text="Test"
        android:textColor="@android:color/black" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.025"
        android:background="#f4f1f1"/>


    <TextView
        android:layout_marginLeft="5dp"
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:text="Hệ thống"
        android:textSize="17sp"
        android:textColor="#497adc"/>

    <TextView
        android:id="@+id/reqSystemCode"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:gravity="bottom"
        android:padding="10dp"
        android:text="Test"
        android:textColor="@android:color/black" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.025"
        android:background="#f4f1f1"/>


    <TextView
        android:layout_marginLeft="5dp"
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:text="Đơn vị xử lý"
        android:textSize="17sp"
        android:textColor="#497adc"/>

    <TextView
        android:id="@+id/proDepart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:gravity="bottom"
        android:padding="10dp"
        android:text="Test"
        android:textColor="@android:color/black" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.025"
        android:background="#f4f1f1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.1"
        android:orientation="horizontal"
        android:weightSum="1.2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:weightSum="1.2"
            android:orientation="vertical">
            <TextView
                android:layout_marginLeft="5dp"
                android:gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:text="Người xử lý"
                android:textSize="17sp"
                android:textColor="#497adc"/>

            <TextView
                android:id="@+id/proUser"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                android:gravity="bottom"
                android:padding="10dp"
                android:text="Test"
                android:textColor="@android:color/black" />


        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.005"
            android:background="#f4f1f1"
            android:layout_marginVertical="10dp"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:weightSum="1.2"
            android:orientation="vertical">
            <TextView
                android:layout_marginLeft="5dp"
                android:gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:text="Thời gian xư lý"
                android:textSize="17sp"
                android:textColor="#497adc"/>

            <TextView
                android:id="@+id/proActua"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                android:gravity="bottom"
                android:padding="10dp"
                android:text="Test"
                android:textColor="@android:color/black" />

        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.005"
            android:background="#f4f1f1"
            android:layout_marginVertical="10dp"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:weightSum="1.2"
            android:orientation="vertical">
            <TextView
                android:layout_marginLeft="5dp"
                android:gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:text="Hạn xử lý"
                android:textSize="17sp"
                android:textColor="#497adc"/>

            <TextView
                android:id="@+id/proPlan"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                android:gravity="bottom"
                android:padding="10dp"
                android:text="Test"
                android:textColor="@android:color/black" />

        </LinearLayout>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.025"
        android:background="#f4f1f1"/>

    <TextView
        android:layout_marginLeft="5dp"
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:text="Nội dung xử lý"
        android:textSize="17sp"
        android:textColor="#497adc"/>

    <TextView
        android:id="@+id/proContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="5dp"
        android:layout_weight="2.5"
        android:text="Test"
        android:background="@drawable/purport"
        android:textColor="@android:color/black" />

    <LinearLayout
        android:layout_marginVertical="5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="0.9"
        android:weightSum="10">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:text="Tệp đính kèm"
            android:textSize="17sp"
            android:textColor="#497adc"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:src="@drawable/description"
            android:background="#fff"/>
    </LinearLayout>




</LinearLayout>
