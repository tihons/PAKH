<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vn.com.vhc.pakh.Search"
    android:weightSum="10"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        android:weightSum="10"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_weight="1.2"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/add_request"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/add_circle"/>

        </RelativeLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Tìm kiếm"
            android:textSize="24sp"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_weight="7.6"/>
        <ImageButton
            android:id="@+id/btn_Info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:background="@drawable/info"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.025"
        android:background="#f4f1f1"/>
    <TextView
        android:layout_marginLeft="5dp"
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:text="Tiêu đề"
        android:textSize="17sp"
        android:textColor="#497adc"/>
    <EditText
        android:id="@+id/tieudeS"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"/>

    <TextView
        android:layout_marginLeft="5dp"
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:text="Hệ thống"
        android:textSize="17sp"
        android:textColor="#497adc"/>
    <Spinner
        android:id="@+id/hethong"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:orientation="vertical"
        android:weightSum="1.2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:weightSum="1"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="5dp"
                android:gravity="bottom"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:text="Đơn vị gửi yêu cầu"
                android:textSize="17sp"
                android:textColor="#497adc"/>
            <TextView
                android:layout_marginLeft="5dp"
                android:gravity="bottom"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:text="Người gửi yêu cầu"
                android:textSize="17sp"
                android:textColor="#497adc"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:weightSum="1"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/donvigui"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_weight="0.5" />
            <!--<EditText-->

            <!--android:gravity="bottom"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_weight="0.5"/>-->
            <Spinner
                android:id="@+id/nguoigui"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_weight="0.5" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:orientation="vertical"
        android:weightSum="1.2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:weightSum="1"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="5dp"
                android:gravity="bottom"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:text="Đơn vị xử lý yêu cầu"
                android:textSize="17sp"
                android:textColor="#497adc"/>
            <TextView
                android:layout_marginLeft="5dp"
                android:gravity="bottom"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:text="Người xử lý yêu cầu"
                android:textSize="17sp"
                android:textColor="#497adc"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:weightSum="1"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/donvixuly"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_weight="0.5" />

            <Spinner
                android:id="@+id/nguoixuly"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_weight="0.5" />

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_marginLeft="5dp"
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:text="Thời gian gửi yêu cầu"
        android:textSize="17sp"
        android:textColor="#497adc"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:weightSum="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fromtime"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.45"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
        <TextView
            android:layout_marginTop="6dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Đến"
            android:layout_weight="0.1"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/totime"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.45"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:orientation="vertical"
        android:weightSum="1.2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:weightSum="1"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="5dp"
                android:gravity="bottom"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:text="Mã yêu cầu"
                android:textSize="17sp"
                android:textColor="#497adc"/>
            <TextView
                android:layout_marginLeft="5dp"
                android:gravity="bottom"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:text="Trạng thái"
                android:textSize="17sp"
                android:textColor="#497adc"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:weightSum="1"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/mayeucau"
                android:gravity="bottom"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"/>
            <Spinner
                android:id="@+id/trangthai"
                android:gravity="bottom"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:textColorHint="#05ab9a"
                android:layout_weight="0.5"
                />
            <!--<EditText-->

            <!--android:gravity="bottom"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_weight="0.5"/>-->

        </LinearLayout>


    </LinearLayout>
    <Button
        android:id="@+id/search"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:text="Tìm kiếm"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:layout_marginHorizontal="90dp"
        android:background="@drawable/bgr_btn"/>

</LinearLayout>
