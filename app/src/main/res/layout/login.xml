<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vn.com.vhc.pakh.Login">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:scaleType="centerCrop"/>
    <ImageView
        android:id="@+id/headerlogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:src="@drawable/mobilogo_header"
        android:scaleType="fitCenter"
        android:layout_marginBottom="50dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headerlogo"
        android:id="@+id/formlogin">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/logintab"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tiếp nhận và quản lý yêu cầu hỗ trợ"
                android:gravity="center"
                android:textColor="#336DC0"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingTop="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Hệ thống CNTT"
                android:textColor="#336DC0"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"
                />

            <EditText
            android:id="@+id/edt_User"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:hint="Username"
            android:background="@drawable/rounded_white"
            android:drawableLeft="@drawable/ic_user"
            android:drawablePadding="5dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginBottom="10dp"/>
            <EditText
                android:id="@+id/edt_Password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:ems="10"
                android:inputType="textPassword"
                android:hint="Password"
                android:background="@drawable/rounded_white"
                android:drawableLeft="@drawable/ic_lock"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:drawablePadding="5dp"
                android:layout_marginBottom="10dp"/>
            <Button
                android:id="@+id/login"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:text="Đăng nhập"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:background="@drawable/bgr_btn"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"/>
        </LinearLayout>
    </ScrollView>

    <!--<ImageView-->
        <!--android:layout_marginTop="50dp"-->
        <!--android:layout_marginBottom="30dp"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:background="@drawable/ic_mobifonelogo"-->
        <!--android:layout_below="@+id/formlogin"-->
        <!--android:layout_centerInParent="true"-->
        <!--/>-->

</RelativeLayout>
