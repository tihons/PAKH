<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:shrinkColumns="0,1,2,3,4"
    android:stretchColumns="*">

    <TableRow>

        <TextView
            android:id="@+id/stt"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:gravity="center"
            android:padding="5dp"
            android:text="STT"
            android:textColor="@android:color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/headerRQ"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:paddingHorizontal="5dp"
            android:text="Tiêu đề"
            android:textColor="@android:color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/donviyc"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:gravity="center"
            android:padding="5dp"
            android:text="ĐV gửi"
            android:textColor="@android:color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/time"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:paddingHorizontal="5dp"
            android:text="Thời gian"
            android:textColor="@android:color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/donvixl"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:gravity="center"
            android:padding="5dp"
            android:text="ĐVXL"
            android:textColor="@android:color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/status"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_column="5"
            android:gravity="center"
            android:padding="5dp"
            android:text="Trạng thái"
            android:textColor="@android:color/black"
            android:textSize="14dp" />
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/codeRQ"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="top"
            android:gravity="center"
            android:paddingHorizontal="5dp"
            android:text="Mã"
            android:textColor="@android:color/black"
            android:textSize="14dp" />

        <TextView
            android:layout_gravity="top"
            android:paddingHorizontal="5dp"
            android:text=""
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/nguoiyc"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_gravity="top"
            android:gravity="center"
            android:paddingHorizontal="5dp"
            android:text="Người gửi"
            android:textColor="@android:color/black"
            android:textSize="14dp" />

        <TextView
            android:layout_gravity="top"
            android:paddingHorizontal="5dp"
            android:text=""
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/nguoixl"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:layout_gravity="top"
            android:gravity="center"
            android:paddingHorizontal="5dp"
            android:text="Người XL"
            android:textColor="@android:color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/deadline"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_column="5"
            android:layout_gravity="top"
            android:gravity="center"
            android:paddingHorizontal="5dp"
            android:text="Hạn XL"
            android:textColor="@android:color/black"
            android:textSize="14dp" />
    </TableRow>

</TableLayout>